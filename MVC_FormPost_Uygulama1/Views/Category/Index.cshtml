@using MVC_FormPost_Uygulama1.Models
@model List<CategoryVM>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
	<title>Index</title>
</head>

<h3>Categories</h3>

<a type="button" class="btn btn-info" href="/Category/Add">Category Add</a>

<div>
	<table class="table table-striped table-dark">
		<thead>
			<tr>
				<th scope="col">ID</th>
				<th scope="col">CategoryName</th>
				<th scope="col">Detail</th>
			</tr>
		</thead>
		<tbody>
			@{
				foreach (var item in Model)
				{
					<tr>
						<th scope="row">@(item.CategoryID)</th>
						<td>@(item.CategoryName)</td>
						<td>
							<a type="button" class="btn btn-info" href="/Product/Index?CategoryID=@(item.CategoryID)">Products</a>
							<a type="button" class="btn btn-danger" href="/Category/Delete?CategoryID=@(item.CategoryID)">Delete</a>
							<a type="button" class="btn btn-success" href="/Category/Update?CategoryID=@(item.CategoryID)">Update</a>
						</td>
					</tr>
				}
			}
		</tbody>
	</table>
</div>